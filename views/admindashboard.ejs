<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard Mock</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="./stylesheets/admindashboard.css" />
</head>
<body>
  <header class="topbar">
    <div class="brand">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <circle cx="12" cy="12" r="10" fill="rgba(255,255,255,0.18)"></circle>
        <path d="M8 12h8M12 8v8" stroke="#fff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <h1><span>MediCARE+</span></h1>
    </div>
  </header>

  <main class="page">
    <aside class="sidebar">
      <nav>
        <ul>
          <li class="active">Dashboard</li>
          <li>Doctor List</li>
          <li>Patient List</li>
          <li>Appointment Details</li>
          <li>Add Doctor</li>
          <li><a href="/queries">Messages</a></li>
        </ul>
      </nav>
    </aside>

    <section class="content">
      <h1 class="welcome">WELCOME ADMIN <%= fname %></h1>

      <div class="grid">
        <div class="card">
          <div class="icon">
            <!-- group icon -->
            <svg viewBox="0 0 24 24" width="36" height="36" aria-hidden="true">
              <rect width="24" height="24" rx="6" fill="#6c53d8"></rect>
              <g transform="translate(3,3)" fill="#fff">
                <circle cx="6" cy="5" r="2"></circle>
                <path d="M0 15c0-3 6-3 6-3s6 0 6 3v1H0v-1z"/>
                <circle cx="13" cy="5" r="2"></circle>
              </g>
            </svg>
          </div>
          <h3>Doctor List</h3>
          <p class="muted"><a href="/alldoctors">View Doctors</a></p>
        </div>

        <div class="card">
          <div class="icon">
            <svg viewBox="0 0 24 24" width="36" height="36" aria-hidden="true">
              <rect width="24" height="24" rx="6" fill="#6c53d8"></rect>
              <g transform="translate(3,3)" fill="#fff">
                <circle cx="6" cy="5" r="2"></circle>
                <path d="M0 15c0-3 6-3 6-3s6 0 6 3v1H0v-1z"/>
                <circle cx="13" cy="5" r="2"></circle>
              </g>
            </svg>
          </div>
          <h3>Patient List</h3>
          <p class="muted"><a href="/allpatients">View Patients</a></p>
        </div>

        <div class="card">
          <div class="icon">
            <!-- appointment icon -->
            <svg viewBox="0 0 24 24" width="36" height="36" aria-hidden="true">
              <rect width="24" height="24" rx="6" fill="#6c53d8"></rect>
              <g transform="translate(4,4)" stroke="#fff" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" fill="none">
                <path d="M2 8L10 2v6"></path>
                <rect x="1" y="3" width="10" height="8" rx="1"></rect>
              </g>
            </svg>
          </div>
          <h3>Appointment Details</h3>
          <p class="muted"><a href="/allappoint">View Appointments</a></p>
        </div>

        <div class="card">
          <div class="icon">
            <!-- add doctor icon -->
            <svg viewBox="0 0 24 24" width="36" height="36" aria-hidden="true">
              <rect width="24" height="24" rx="6" fill="#6c53d8"></rect>
              <g transform="translate(6,6)" fill="#fff">
                <rect x="3" y="1" width="4" height="8" rx="1"></rect>
                <rect x="0" y="4" width="10" height="4" rx="1"></rect>
                <path d="M12 2v8M9 5h6" stroke="#fff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
              </g>
            </svg>
          </div>
          <h3>Manage Doctors</h3>
          <p class="muted"><a href="/adddoc">Add Doctors</a></p>
        </div>
      </div>

     

    </section>
  </main>
</body>
</html>